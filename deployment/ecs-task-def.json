{
    "family": "tasks-family",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["EC2"],
    "cpu": "4096",
    "memory": "7024",
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "767398029156.dkr.ecr.us-east-1.amazonaws.com/task-manager:nginx",
            "essential": true,
            "memory": 1024,
            "cpu": 1024,
            "portMappings": [
                {
                    "containerPort": 80,
                    "protocol": "tcp"
                }
            ],
            "healthCheck": {
                "command": ["CMD-SHELL", "curl -f http://localhost || exit 1"],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 10
            }
        },
        {
            "name": "laravel",
            "image": "767398029156.dkr.ecr.us-east-1.amazonaws.com/task-manager:laravel",
            "essential": true,
            "memory": 1024,
            "cpu": 1024,
            "environment": [
                { "name": "APP_ENV", "value": "development" },
                { "name": "DB_HOST", "value": "mysql" },
                { "name": "DB_DATABASE", "value": "tasks" },
                { "name": "DB_USERNAME", "value": "root" },
                { "name": "DB_PASSWORD", "value": "password123" }
            ],
            "portMappings": [
                {
                    "containerPort": 9000,
                    "protocol": "tcp"
                }
            ],
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:9000 || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 10
            }
        },
        {
            "name": "vite",
            "image": "767398029156.dkr.ecr.us-east-1.amazonaws.com/task-manager:vite",
            "essential": true,
            "memory": 1024,
            "cpu": 1024,
            "portMappings": [
                {
                    "containerPort": 5173,
                    "protocol": "tcp"
                }
            ],
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:5173 || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 10
            }
        },
        {
            "name": "mysql",
            "image": "mysql:8.4",
            "essential": true,
            "memory": 1024,
            "cpu": 1024,
            "environment": [
                { "name": "MYSQL_ROOT_PASSWORD", "value": "password123" },
                { "name": "MYSQL_DATABASE", "value": "tasks" }
            ],
            "portMappings": [
                {
                    "containerPort": 3306,
                    "protocol": "tcp"
                }
            ]
        }
    ]
}
