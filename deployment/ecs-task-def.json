{
    "family": "tasks-family",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["EC2"],
    "cpu": "1024",
    "memory": "2048",
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "767398029156.dkr.ecr.us-east-1.amazonaws.com/nginx:latest",
            "essential": true,
            "memory": 512,
            "cpu": 256,
            "portMappings": [
                {
                    "containerPort": 80,
                    "protocol": "tcp"
                }
            ]
        },
        {
            "name": "laravel",
            "image": "767398029156.dkr.ecr.us-east-1.amazonaws.com/laravel:latest",
            "essential": true,
            "memory": 512,
            "cpu": 256,
            "environment": [
                { "name": "APP_ENV", "value": "production" },
                { "name": "DB_HOST", "value": "mysql" },
                { "name": "DB_DATABASE", "value": "tasks" },
                { "name": "DB_USERNAME", "value": "root" },
                { "name": "DB_PASSWORD", "value": "password123" }
            ],
            "portMappings": [
                {
                    "containerPort": 9000,
                    "protocol": "tcp"
                }
            ]
        },
        {
            "name": "vite",
            "image": "767398029156.dkr.ecr.us-east-1.amazonaws.com/vite:latest",
            "essential": true,
            "memory": 512,
            "cpu": 256,
            "portMappings": [
                {
                    "containerPort": 5173,
                    "protocol": "tcp"
                }
            ]
        },
        {
            "name": "mysql",
            "image": "mysql:8.4",
            "essential": true,
            "memory": 512,
            "cpu": 256,
            "environment": [
                { "name": "MYSQL_ROOT_PASSWORD", "value": "password123" },
                { "name": "MYSQL_DATABASE", "value": "tasks" }
            ],
            "portMappings": [
                {
                    "containerPort": 3306,
                    "protocol": "tcp"
                }
            ]
        }
    ]
}
