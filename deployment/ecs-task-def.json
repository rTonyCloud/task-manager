{
    "family": "tasks-family",
    "containerDefinitions": [
      {
        "name": "nginx",
        "image": "<NGINX_IMAGE>",
        "essential": true,
        "memory": 512,
        "cpu": 256,
        "portMappings": [
          {
            "containerPort": 80,
            "hostPort": 80
          }
        ]
      },
      {
        "name": "laravel",
        "image": "<LARAVEL_IMAGE>",
        "essential": true,
        "memory": 512,
        "cpu": 256,
        "environment": [
          { "name": "APP_ENV", "value": "production" },
          { "name": "DB_HOST", "value": "mysql" },
          { "name": "DB_DATABASE", "value": "tasks" },
          { "name": "DB_USERNAME", "value": "root" },
          { "name": "DB_PASSWORD", "value": "password123" }
        ]
      },
      {
        "name": "vite",
        "image": "<VITE_IMAGE>",
        "essential": true,
        "memory": 512,
        "cpu": 256,
        "portMappings": [
          {
            "containerPort": 5173,
            "hostPort": 5173
          }
        ]
      },
      {
        "name": "mysql",
        "image": "<MYSQL_IMAGE>",
        "essential": true,
        "memory": 512,
        "cpu": 256,
        "environment": [
          { "name": "MYSQL_ROOT_PASSWORD", "value": "password123" },
          { "name": "MYSQL_DATABASE", "value": "tasks" }
        ],
        "portMappings": [
          {
            "containerPort": 3306,
            "hostPort": 3307
          }
        ]
      }
    ]
  }
